<Project Sdk="Microsoft.NET.Sdk">
	
	<PropertyGroup>
		<TargetFrameworks>$(TargetFrameworks);net7.0;net7.0-ios;net7.0-android;net7.0-maccatalyst</TargetFrameworks>
		<DefineConstants>$(DefineConstants);HAS_WINUI</DefineConstants>

		<!-- Ensures the .xr.xml files are generated in a proper layout folder -->
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Uno.WinUI" Version="4.10.13" />
		<PackageReference Include="Uno.Resizetizer" Version="1.1.2" />
		<PackageReference Include="Microsoft.Extensions.Logging.Console" Version="7.0.0" />
	</ItemGroup>

	<ItemGroup>
		<!-- Removes native usings to avoid Ambiguous reference -->
		<Using Remove="@(Using->HasMetadata('Platform'))" />
	</ItemGroup>
	
	<ItemGroup>
		<Content Include="Assets\**" />
		<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
		<Compile Update="**\*.xaml.cs">
			<DependentUpon>%(Filename)</DependentUpon>
		</Compile>
		<PRIResource Include ="**\*.resw" />
	</ItemGroup>

	<ItemGroup>
		<UnoImage Include="Assets\**\*.svg" />
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>

	<Import Project="../../../libs/Mvvm.Navigation.Uno.WinUI/Mvvm.Navigation.Uno.WinUI.props" />

	<ItemGroup>
		<ProjectReference Include="..\..\..\analyzers\Mvvm.Navigation.Generators\Mvvm.Navigation.Generators.csproj"
						  OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
		<ProjectReference Include="..\..\..\libs\Mvvm.Navigation.Uno.WinUI\Mvvm.Navigation.Uno.WinUI.csproj" />
		<ProjectReference Include="..\..\Mvvm.Apps.Core\Mvvm.Apps.Core.csproj" />
	</ItemGroup>

	<Import Project="..\..\Mvvm.Apps.Shared\Mvvm.Apps.Shared.props" />
	<Import Project="..\..\Mvvm.Apps.WinUI.Shared\Mvvm.Apps.WinUI.Shared.props" />

	<ItemGroup>
		<Compile Remove="..\..\Mvvm.Apps.Shared\App.xaml.cs" />
		<ApplicationDefinition Remove="..\..\Mvvm.Apps.WinUI.Shared\App.xaml" />
	</ItemGroup>
	
</Project>
