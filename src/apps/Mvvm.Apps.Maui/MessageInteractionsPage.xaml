<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:Mvvm.Apps.ViewModels;assembly=Mvvm.Apps.Core"
    x:Class="Mvvm.Apps.Maui.MessageInteractionsPage"
    x:DataType="{x:Type viewModels:MessageInteractionsViewModel}"
    Title="Message Interactions"
    >

    <StackLayout>
        <Button
            Text="Message"
            Command="{Binding ShowMessageCommand, Mode=OneWay}"
            />
        <Button
            Text="Warning"
            Command="{Binding ShowWarningCommand, Mode=OneWay}"
            />
        <Button
            Text="Exception"
            Command="{Binding ShowExceptionCommand, Mode=OneWay}"
            />
        <Button
            Text="Question"
            Command="{Binding ShowQuestionCommand, Mode=OneWay}"
            />
    </StackLayout>

</ContentPage>
